<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/xtra_dialog_bg">

    <TextView
        android:id="@+id/redirectingHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/xtra_redirecting_dialog_heading_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/redirecting_dialog_temp_heading_text"
        android:textColor="?attr/inverted"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/confirmImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redirectingHeading"
        app:layout_constraintVertical_bias="0.2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/redirecting_anim" />

    <TextView
        android:id="@+id/confirmInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/redirecting_dialog_temp_info_text"
        android:textColor="?attr/textColorLight"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmImage" />

</androidx.constraintlayout.widget.ConstraintLayout>