<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mentorAllocatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    android:background="@drawable/mentor_allocator_recycler_item_bg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStudentStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStudentEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStudentTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStudentBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />


    <TextView
        android:id="@+id/mentorAllocatorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mentor"
        android:textColor="?attr/textColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStudentBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineStudentEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineStudentStart"
        app:layout_constraintTop_toTopOf="@+id/guidelineStudentTop"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mentorAllocatorEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Email: mentor@gmail.com"
        android:textColor="?attr/textColorLight"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStudentBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineStudentEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineStudentStart"
        app:layout_constraintTop_toBottomOf="@+id/mentorAllocatorName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mentorAllocatorPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password: 123456"
        android:textColor="?attr/textColorLight"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStudentBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineStudentEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineStudentStart"
        app:layout_constraintTop_toBottomOf="@+id/mentorAllocatorEmail"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/mentorAllocatorStudentCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Students: 8"
        android:textColor="?attr/textColorLight"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineStudentBottom"
        app:layout_constraintEnd_toStartOf="@+id/guidelineStudentEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineStudentStart"
        app:layout_constraintTop_toBottomOf="@+id/mentorAllocatorPass"
        app:layout_constraintVertical_bias="0.0" />



